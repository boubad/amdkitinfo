{
	"editor.insertSpaces": false,
	"editor.renderWhitespace": true,
	"files.exclude": {
		"**/.git": true,
		"**/.DS_Store": true,
		"**/*.map":true,
		"node_modules":true,
		"dist":true,
		"public/javascripts":true,
		"public/styles/bootstrap":true,
		"public/styles/fontawesome":true,
		"**/*.js": { "when": "$(basename).ts"}
	}
}